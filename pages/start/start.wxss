/* pages/start/start.wxss */
.container{
   overflow: hidden; 
}

/* top */
.top-bar{
  height: 50rpx;
  padding: 0 50rpx;
  color: #777;
  font-size: 14pt;
}

/* header */
.header-logo{
  height: 420rpx;
}
.header-logo-img{
  width: 200rpx;
  height: 200rpx;
}
.space-form{
  padding:0 40rpx;
}
.footer-extra{
  padding: 40rpx;
  text-align: center;
}

/* footer */
.footer-extra{
  padding-top:60rpx;
  flex:1;
}

/* input-style */
.input-message{
  color: #555;
  font-size: 13pt;
  height: 120rpx;
  background-color: #f7f7f7;
  border-radius: 75rpx;
  margin-top: 40rpx;
  padding: 0 45rpx;
  box-shadow: 0 0 30rpx 5rpx #fcfcfc;
}
.input-message-bd{
  padding-left: 30rpx;
  height: 100%;
  flex: 1;
}
.input-message-bd>input{
  height: 100%;
}
.input-message-hidden{
  opacity: 0;
}
.input-user-image{
  width: 50rpx;
  height: 50rpx;
}
.input-message-del{
  width:35rpx;
  height: 35rpx;
}
.input-login{
  font-size: 13pt;
  height: 120rpx;
  margin-top: 80rpx;
  color: #fff;
  position: relative;
}
.input-login-bg{
  border-radius: 75rpx;
  position: absolute;
  z-index: -1;
  background-image: linear-gradient(120deg, #f6d365 0%, #fda085 100%); 
  box-shadow: 5rpx 0 30rpx 5rpx #f5e8bf; 
  width: 100%;
  height: 100%;
  transition-duration: 1s;
  transition-property: all;
  transition-timing-function: ease-in-out;
  transition-delay: 0s;
}
.input-login-bg-loading{
  width: 120rpx;
}

/* button-login */
.button-login-loading-content{
  width: 60rpx;
  height: 60rpx;
  position: relative;
}
.double-bounce1, .double-bounce2 {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #fff;
  opacity: 0.6;
  position: absolute;
  top: 0;
  left: 0;
  -webkit-animation: bounce 1.5s infinite ease-in-out;
  animation: bounce 2.0s infinite ease-in-out;
}
 
.double-bounce2 {
  -webkit-animation-delay: -1.0s;
  animation-delay: -1.0s;
}
 

/* 动画  */
@-webkit-keyframes bounce {
  0%, 100% { 
    -webkit-transform: scale(0.0) 
}50% { 
  -webkit-transform: scale(1.0) 
  }
}
 
@keyframes bounce {
  0%, 100% {
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  } 50% {
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}


/* message */
.normal-message{
  font-size: 12pt;
  color: #999;
}

/* copy-right */
.copy-right{
  text-align: center;
  position: fixed;
  bottom:20rpx;
  right: 0;
  left: 0;
  margin: 0 auto;
  color: #ccc;
  font-size: 8pt;
}